<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp45"
    android:layout_marginLeft="@dimen/dp7_5"
    android:layout_marginRight="@dimen/dp7_5"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@drawable/shape_btn_unselected_bg"
        android:gravity="center"
        android:text="@string/range_ways"
        android:textColor="@color/white"
        android:textSize="@dimen/sp15"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_unselected_bg"
            android:gravity="center"
            android:text="@string/title_cal"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title_match"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_unselected_bg"
            android:gravity="center"
            android:text="@string/match_degree"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_unselected_bg"
            android:gravity="center"
            android:text="@string/point_count"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/dp10"
            android:layout_height="match_parent"
            android:background="@color/transparent"></View>


        <View
            android:layout_width="@dimen/dp10"
            android:layout_height="match_parent"
            android:background="@color/transparent"></View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_unselected_bg"
            android:gravity="center"
            android:text="@string/average_hr_strength"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/dp10"
            android:layout_height="match_parent"
            android:background="@color/transparent"></View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_unselected_bg"
            android:gravity="center"
            android:text="@string/average_hr"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>