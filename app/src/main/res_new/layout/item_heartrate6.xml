<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_top"
    android:layout_width="@dimen/ncard4_with"
    android:layout_height="@dimen/ncard4_height"
    android:background="@color/black_50">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/l_layout"
        android:layout_width="@dimen/ncard4_content_with"
        android:layout_height="@dimen/ncard4_content_height"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/dp7"
        android:paddingRight="@dimen/dp7"
        android:visibility="visible">


        <TextView
            android:id="@+id/tv_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp2"
            android:layout_marginRight="@dimen/dp15"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"
            android:visibility="invisible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="hhhhhhh" />


        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/ncard4_head_with"
            android:layout_height="@dimen/ncard4_head_with"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/dp10"
            android:scaleType="centerCrop"
            tools:ignore="MissingConstraints"
            tools:src="@mipmap/icon_default_head" />

        <com.jkcq.hrwtv.ui.view.BebasNeueTextView
            android:id="@+id/tv_point_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/ncard4_ceter_text_size"
            app:layout_constraintHorizontal_bias="0.80"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="77" />

        <TextView
            android:id="@+id/iv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="@dimen/sp30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_point_value"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />

        <RelativeLayout
            android:id="@+id/layout_nikeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_white_8_bg"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6">


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_time"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                tools:text="name" />

            <com.jkcq.hrwtv.ui.view.BebasNeueTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="@dimen/dp2"
                android:singleLine="true"
                android:text="00:00:00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/constr_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_white_4_bg"
                android:paddingLeft="@dimen/dp2">

                <ImageView
                    android:id="@+id/iv_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_card1_hr_course_nor" />

                <com.jkcq.hrwtv.ui.view.BebasNeueTextView
                    android:id="@+id/tv_two"
                    android:layout_marginTop="@dimen/dp5"
                    style="@style/CardValueStartStyle"
                    android:textSize="@dimen/size_21"
                    tools:text="115" />

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.2" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_white_4_bg"
                android:paddingLeft="@dimen/dp2">

                <com.jkcq.hrwtv.ui.view.BebasNeueTextView
                    android:id="@+id/tv_one"
                    style="@style/CardValueStartStyle"
                    android:textSize="@dimen/size_21"
                    android:layout_marginTop="@dimen/dp5"
                    tools:text="115" />

                <ImageView
                    android:id="@+id/iv_cal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_card1_main_cal" />

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.2" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_white_4_bg"
                android:paddingLeft="@dimen/dp2">

                <ImageView
                    android:id="@+id/iv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_card1_main_point" />

                <com.jkcq.hrwtv.ui.view.BebasNeueTextView
                    android:id="@+id/tv_point"
                    style="@style/CardValueStartStyle"
                    android:textSize="@dimen/size_21"
                    android:layout_marginTop="@dimen/dp5"
                    tools:text="115" />
            </RelativeLayout>


        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_toRightOf="@+id/l_layout"
        android:gravity="center"
        android:orientation="vertical">


        <com.jkcq.hrwtv.wu.newversion.view.RealMatchView
            android:id="@+id/hrStageView"
            android:layout_width="@dimen/dp15"
            android:layout_height="match_parent"
            android:background="@drawable/shape_heartstate_bg"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_Left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/l_layout"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_current_stren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/icon_card4_one" />
    </LinearLayout>

</RelativeLayout>