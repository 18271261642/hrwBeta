<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/course_height"
    android:clickable="true"
    android:focusable="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp2"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_btn_white_20_radio_15_bg"/>


        <ImageView
            android:id="@+id/iv_course_pic"
            android:layout_width="@dimen/dp255"
            android:layout_height="@dimen/dp188"
            android:layout_centerInParent="true"
            android:src="@mipmap/bg_hall"/>

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp30"
            android:gravity="center_vertical"
            android:lines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15"
            android:textStyle="bold"
            tools:text="名称：快速燃脂 " />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_course_name"
            android:layout_marginLeft="@dimen/dp30"
            android:lines="2"
            android:text="@string/course_time_minute"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp30"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15"
            android:textStyle="bold"
            tools:text="强度：高级" />

    </RelativeLayout>
</RelativeLayout>