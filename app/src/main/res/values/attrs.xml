<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="WebViewWithProgress">
        <attr name="progressStyle" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
        <attr name="barHeight" format="dimension"/>
    </declare-styleable>

    <attr name="PermissionBackround" format="reference"></attr>
    <attr name="PermissionTitleColor" format="color"></attr>
    <attr name="PermissionMsgColor" format="color"></attr>
    <attr name="PermissionItemTextColor" format="color"></attr>
    <attr name="PermissionButtonTextColor" format="color"></attr>
    <attr name="PermissionButtonBackground" format="reference"></attr>
    <attr name="PermissionBgFilterColor" format="color"></attr>
    <attr name="PermissionIconFilterColor" format="color"></attr>

    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
        <attr name="matProg_linearProgress" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PageIndicatorView">
        <!-- indicator width, unit dp,default 6dp -->
        <attr name="fpi_width" format="dimension" />
        <!-- indicator height,unit dp,default 6dp -->
        <attr name="fpi_height" format="dimension" />
        <!-- indicator space between two indicators,unit dp,default 6dp -->
        <attr name="fpi_gap" format="dimension" />
        <!-- width of the stroke used to draw the indicators,default 0dp -->
        <attr name="fpi_strokeWidth" format="dimension" />
        <!-- color of the stroke used to draw the indicators,default "#ffffff" -->
        <attr name="fpi_strokeColor" format="color" />
        <!-- Whether or not the selected indicator snaps to the indicators,default false -->
        <attr name="fpi_isSnap" format="boolean" />
        <!-- indicator select color ,default "#ffffff" -->
        <attr name="fpi_selectColor" format="color" />
        <!-- indicator unselect color ,default "#88ffffff"  -->
        <attr name="fpi_unselectColor" format="color" />
        <!-- indicator corner raduis ,unit dp,default 3dp -->
        <attr name="fpi_cornerRadius" format="dimension" />
        <!-- indicator select drawable resource -->
        <attr name="fpi_selectRes" format="reference" />
        <!-- indicator unselect drawable resource -->
        <attr name="fpi_unselectRes" format="reference" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="titleText" format="reference|string" />
        <attr name="leftText" format="reference|string" />
        <attr name="rightText" format="reference|string" />
        <attr name="leftIcon" format="reference" />
        <attr name="rightIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="Timer">
        <attr name="text" format="reference|string" />
        <attr name="second" format="integer" />
    </declare-styleable>
</resources>