<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_btn_white_20_radio_15_bg"
    android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/newPkRedImg"
        app:layout_constraintBottom_toTopOf="@id/new_pk_progress"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_pk_img_red"/>


    <com.jkcq.hrwtv.ui.view.BebasNeueTextView
        app:layout_constraintBottom_toTopOf="@id/new_pk_progress"
        app:layout_constraintLeft_toRightOf="@id/newPkRedImg"
        android:id="@+id/newPkRedProgressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="42sp" />

    <ProgressBar
        android:id="@+id/new_pk_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp15"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/seekbar_progress_stytpe_nor" />



   <ImageView
       android:id="@+id/newPkBlueImg"
       app:layout_constraintBottom_toTopOf="@id/new_pk_progress"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_margin="5dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/icon_pk_img_blue"/>

    <com.jkcq.hrwtv.ui.view.BebasNeueTextView
        app:layout_constraintBottom_toTopOf="@id/new_pk_progress"
        app:layout_constraintRight_toLeftOf="@id/newPkBlueImg"
        android:id="@+id/newPkBlueProgressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:text=""
        android:textColor="@color/white"
        android:textSize="42sp" />


    <ImageView
        android:id="@+id/newPkVsImg"
        app:layout_constraintBottom_toTopOf="@id/new_pk_progress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_pk_vs"/>


    <com.jkcq.hrwtv.ui.view.BebasNeueTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/newPkAllCalTv"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/newPkVsImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="5dp"/>

</android.support.constraint.ConstraintLayout>