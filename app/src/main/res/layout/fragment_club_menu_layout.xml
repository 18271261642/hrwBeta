<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <include layout="@layout/view_menu_tittle" />

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_club_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp70"
                android:focusable="true"
                android:background="@drawable/common_button_selector"
                >

                <TextView
                    android:id="@+id/tv_clubname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:ellipsize="middle"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="请选择会所名称"
                    android:textColor="@drawable/menu_txt_selector"
                    android:duplicateParentState="true"
                    android:textSize="@dimen/sp24" />


                <ImageView
                    android:id="@+id/iv_club_selcet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:duplicateParentState="true"
                    android:src="@drawable/icon_arrow_down_selector" />


            </RelativeLayout>


            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_alignParentBottom="true"
                android:background="@color/white_30"
                android:visibility="gone" />

            <ListView
                android:id="@+id/listView_club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@color/_333333"
                android:divider="@color/white_30"
                android:dividerHeight="0.4dp"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:focusable="true"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_alignParentBottom="true"
                android:background="@color/white_30" />

            <RelativeLayout
                android:id="@+id/rl_function_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp70"
                android:focusable="true"
                android:background="@drawable/common_button_selector"
                >

                <TextView
                    android:id="@+id/tv_function"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:ellipsize="middle"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="请选择功能区"
                    android:textColor="@drawable/menu_txt_selector"
                    android:duplicateParentState="true"
                    android:textSize="@dimen/sp24" />

                <ImageView
                    android:id="@+id/iv_function_selcet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:duplicateParentState="true"
                    android:src="@drawable/icon_arrow_down_selector" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/white_30" />

            <ListView
                android:id="@+id/listView_function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@color/_333333"
                android:divider="@color/white_30"
                android:dividerHeight="0.4dp"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:focusable="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_alignParentBottom="true"
                android:background="@color/_d8d8d8" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>