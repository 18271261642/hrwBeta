<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_btn_black_90_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_btn_unselected_bg"></View>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <TextView
            style="@style/base_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="下载中…"
            android:textSize="@dimen/sp27"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>


        <TextView
            android:id="@+id/tv_packge"
            style="@style/base_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp27"
            android:textStyle="bold"
            tools:text="更新包大小：" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>


        <ProgressBar
            android:id="@+id/view_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp15"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_marginBottom="@dimen/dp8"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/manager_seekbar_progress_stytpe_nor" />

        <TextView
            android:id="@+id/tv_progress_value"
            style="@style/base_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            tools:text="0%" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp45"
            android:background="@drawable/shape_btn_back"
            android:focusable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/sp15"
            android:paddingRight="@dimen/sp15"
            android:text="取消下载"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
    </LinearLayout>


</RelativeLayout>


