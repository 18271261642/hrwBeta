<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_btn_black_90_bg">


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_btn_unselected_bg"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/bg_user_alone_reg"/>

    <LinearLayout
        android:layout_width="@dimen/dp360"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp30">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp25"
            android:gravity="center"
            android:text="注册设备"
            android:textColor="@color/white"
            android:textSize="@dimen/sp27"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/layout_accout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/shape_btn_unselected_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="账 号："
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp15">

            </TextView>

            <EditText
                android:id="@+id/et_accout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@null"
                android:text="shenzhen"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/sp15"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/shape_btn_unselected_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="密 码："
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp15"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@null"
                android:text="admin@hrw20.21"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/sp15"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:layout_marginTop="@dimen/dp25"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_btn_unselected_bg"
                android:focusable="true"
                android:gravity="center"
                android:nextFocusRight="@id/btn_sure"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp10"
                android:layout_weight="1"></View>

            <TextView
                android:id="@+id/btn_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_btn_unselected_bg"
                android:focusable="true"
                android:gravity="center"
                android:nextFocusLeft="@id/btn_cancel"
                android:nextFocusRight="@id/btn_sure"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>